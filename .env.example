# Video Identifier - Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# Required Settings
# ===========================================

# IMDB Database password (required)
IMDB_PASSWORD=your_imdb_password_here

# ===========================================
# Path Configuration
# ===========================================

# Source directory containing disc folders with MKV files
SOURCE_PATH=/ripped_discs/video

# Output directory for Jellyfin-compatible media library
# Movies will be placed in $OUTPUT_PATH/Movies/
# TV Shows will be placed in $OUTPUT_PATH/Shows/
OUTPUT_PATH=/media

# ===========================================
# LLM Configuration
# ===========================================

# LLM API endpoint (OpenAI-compatible)
LLM_BASE_URL=http://nas2:8191/v1

# LLM model name
LLM_MODEL=qwen3-30b

# ===========================================
# Database Configuration
# ===========================================

# MariaDB/MySQL host
IMDB_HOST=nas2

# Database username
IMDB_USER=imdb

# Database name
IMDB_DATABASE=imdb

# ===========================================
# Network Configuration
# ===========================================

# IP address for nas2 hostname (used in extra_hosts)
NAS2_IP=192.168.12.209

# ===========================================
# Watcher Configuration (for video-identifier-watcher service)
# ===========================================

# Interval in seconds between checks for new discs
WATCH_INTERVAL=300

# ===========================================
# Debug Configuration
# ===========================================

# Enable verbose debug logging (true/false)
DEBUG=false
